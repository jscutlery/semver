{
  "$schema": "http://json-schema.org/schema",
  "id": "ngAdd",
  "title": "@jscutlery/semver ng-add schematic",
  "type": "object",
  "properties": {
    "syncVersions": {
      "description": "Lock/sync versions between packages",
      "type": "boolean",
      "default": false,
      "x-prompt": "Lock/sync versions between packages?"
    },
    "projects": {
      "description": "Which projects should be versioned independently",
      "type": "array"
    },
    "enforceConventionalCommits": {
      "description": "Install & configure commitlint, husky & commitizen",
      "type": "boolean",
      "default": false,
      "x-prompt": "Enforce conventional commits?"
    },
    "skipInstall": {
      "description": "Skips installing new node_modules after modifying package.json",
      "type": "boolean",
      "default": false,
      "x-prompt": "Skips installing new modules?"
    }
  },
  "required": []
}
