{
  "name": "semver",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/semver/src",
  "projectType": "library",
  "generators": {},
  "targets": {
    "version": {
      "executor": "./dist/packages/semver:version",
      "options": {
        "push": true,
        "noVerify": true,
        "postTargets": [
          "semver:publish",
          "semver:github"
        ],
        "commitMessageFormat": "release(${projectName}): ðŸŽ¸ cut release to ${version}"
      }
    },
    "github": {
      "executor": "./dist/packages/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/semver/**/*.ts",
          "packages/semver/**/*.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/semver/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "outputPath": "dist/packages/semver",
        "tsConfig": "packages/semver/tsconfig.lib.json",
        "packageJson": "packages/semver/package.json",
        "main": "packages/semver/src/index.ts",
        "assets": [
          "README.md",
          "LICENSE",
          {
            "input": "packages/semver",
            "glob": "**/files/**",
            "output": "/"
          },
          {
            "input": "packages/semver",
            "glob": "**/files/**/.gitkeep",
            "output": "/"
          },
          {
            "input": "packages/semver",
            "glob": "**/*.json",
            "ignore": [
              "**/tsconfig*.json",
              "project.json",
              "node_modules/**"
            ],
            "output": "/"
          },
          {
            "input": "packages/semver",
            "glob": "**/*.d.ts",
            "ignore": [
              "node_modules/**"
            ],
            "output": "/"
          }
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    }
  },
  "tags": []
}
